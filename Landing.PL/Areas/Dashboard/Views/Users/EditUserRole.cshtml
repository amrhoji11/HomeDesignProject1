@model EditUserRoleVM
@section Header {
     Edit Roles
}

<div class="container mt-5">
    <h3 class="text-center">Edit User Role</h3>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditUserRole" asp-controller="Users" class="p-4 border rounded shadow-sm bg-white">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input asp-for="Id" type="hidden" />

                <div class="form-group mb-3">
                    <label asp-for="SelectedRoles" class="form-label fw-bold">Select Role</label>
                    <select asp-for="SelectedRoles" class="form-select" asp-items="Model.RolesList">
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
