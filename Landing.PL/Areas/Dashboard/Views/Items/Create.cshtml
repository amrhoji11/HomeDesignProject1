@model ItemFromVM


@section Header{
    Items
}
<div class="col-md-12">

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create </h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="Items" asp-action="Create" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Name">
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control textarea" placeholder="Enter Description">
                </div>
                <div class="form-group">
                    <label asp-for="DesignId">Select Design</label>
                    <select asp-for="DesignId" class="form-control" asp-items="Model.Design" >

                    </select>
                </div>
               
                
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control-file">
                </div>


            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-primary">Back To List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.tiny.cloud/1/mu9ixsvggd9zw9yn47gmbp6yjtz6n237ile1t45zm1y1s3r2/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>

        tinymce.init({
            selector: '.textarea',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
}