@model DesignVM

@section Header {
    Delete Item
}

<div class="col-md-12">

    <div class="card card-danger ">
        <div class="card-header">
            <h3 class="card-title">Delete Confirmation @Model.Name</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="card-body">
            <p>Are You Sure of Delete @Model.Name Item ?</p>

        </div>
        <div class="card-footer">
            <form asp-controller="Items" asp-action="DeleteConfirm" asp-route-id="@Model.Id">
                @*  <input type="hidden" asp-for="Id" />  *@
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Designs" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
    </div>
</div>