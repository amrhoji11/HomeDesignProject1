@model Blog

<div class="container mt-4">
    <!-- Blog Post Card -->
    <div class="card">
        <div class="card-header text-center">
            <h2>Blog Post: @Model.Item.Name</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">Linked Item: @Model.Item.Name</h5>
            <p class="card-text"><strong>Blog Content:</strong> @Html.Raw(Model.Content)</p>

            <div class="row mt-4">
                <!-- Item Image -->
                <div class="col-md-6">
                   
                        <img src="~/files/images/@Model.Item.ImageName" alt="@Model.Item.Name" class="img-fluid rounded shadow-sm">
                   
                   
                </div>

                <!-- Item and Design Information -->
                <div class="col-md-6">
                    <h5><strong>Item Information</strong></h5>
                    <p><strong>Item Name:</strong> @Model.Item.Name</p>
                    <p><strong>Description:</strong> @Html.Raw(Model.Item.Description)</p>
                    <p><strong>Created At:</strong> @Model.Item.CreateAt.ToShortDateString()</p>

                    <!-- Linked Design Info -->
                    @if (@Model.Item.Design != null)
                    {
                        <p><strong>Linked Design:</strong> @Model.Item.Design.Name</p>
                        <p><strong>Design Description:</strong> @Html.Raw(Model.Item.Design.Description)</p>
                    }
                    else
                    {
                        <p><strong>Linked Design:</strong> No design available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="card-footer text-center">
            <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
